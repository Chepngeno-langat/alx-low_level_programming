#include "main"

/**
 * print_sign - prints the sign of number
 * @n: parameter that is checked
 * Return: 0 or 1 0r -1 depending on coditions
 */
int print_sign(int n)
{
  if (n > 0)
    {
      _putchar('+');
      return (1);
    }
  else if (n == 0)
    {
      _putchar('0');
      return (0);
    }
  else
    {
      _puchar('-');
      return (0);
    }
}
